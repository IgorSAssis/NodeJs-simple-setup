{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                     
    "allowJs": true,                         
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                   
    "resolveJsonModule": true,

    "strict": true,                          
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
       ],                      
    "esModuleInterop": true,                  
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "baseUrl": ".",
    "paths": {
      "@controllers/*": [ "./src/controllers/*" ],
      "@models/*": [ "./src/models/*" ],
      "@views/*": [ "./src/views/*" ],
      "@config/*": [ "./src/config/*" ]
    }
  },
     "include": [
      "src/**/*"
    ]
}
